{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "vite/client",
            "node",
            "chrome",
            "jest"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "incremental": true,
        "removeComments": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "assets/*": [
                "assets/*"
            ],
            "locales/*": [
                "locales/*"
            ],
            "fonts/*": [
                "fonts/*"
            ]
        },
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["./src"],
    "exclude": [
        "**/node_modules/*",
        "build",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
